<% layout('layouts/boilerplate')%>

<div class="row">
  <div class="col-6 offset-3">
    <h1 class="text-center mb-3">Add Campground</h1>
    <form
      action="/addcampground"
      novalidate
      method="POST"
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Name of campground: </label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="title"
          placeholder="Enter Title "
          required
        />
        <div class="invalid-feedback">Please Enter a Campground Name.</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price"> Price: </label>
        <div class="input-group">
          <span class="input-group-text" id="dollar">$</span>
          <input
            class="form-control"
            type="number"
            id="price"
            name="price"
            placeholder="Enter price"
            min="0"
            step="0.01"
            aria-describedby="dollar"
            required
          />
          <div class="invalid-feedback">
            Price is invalid must be a positive number greater then 0 with no
            more then 2 decimal places (0.00).
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Address: </label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="location"
          placeholder="Enter Location"
          required
        />
        <div class="invalid-feedback">Please Enter a Address.</div>
      </div>
      <label class="form-label" for=" description">Description: </label>
      <div class="form-floating mb-3">
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="description"
          placeholder="Enter Description"
          required
        ></textarea>
        <div class="invalid-feedback">Please Enter a Description.</div>
      </div>
      <div class="mb-3">
        <div class="custom-file">
          <label class="form-label" for="image">Image Files: </label>
          <input
            type="file"
            id="image"
            name="image"
            class="form-control form-control-lg"
            multiple
            required
          />
          <span class="custom-file-label"></span>
        </div>

        <div class="invalid-feedback">Please Enter a URL.</div>
      </div>

      <button class="btn btn-primary my-3">Submit Item</button>
    </form>
  </div>
</div>
