<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        
        <h1 class="text-center mb-4">Edit Photos</h1>
        
        <form
            action="/camp/<%= camp._id %>/editcampground/photos?_method=PUT"
            novalidate
            method="POST"
            class="needs-validation"
            enctype="multipart/form-data"
        >
        
            <div class="mb-4 p-3 border rounded shadow-sm bg-light">
                <h2 class="mb-3">Add New Photos</h2>
                <div class="mb-3">
                    <label class="form-label" for="image">Upload Image Files: </label>
                    <div class="custom-file">
                        <input 
                            type="file" 
                            id="image" 
                            name="image" 
                            class="form-control form-control-lg" 
                            multiple 
                            />
                        <span class="custom-file-label"></span>
                    </div>
                </div>
            </div>

            <div class="mb-4 p-3 border rounded shadow-sm bg-light">
                <h2 class="mb-3">Delete Existing Photos</h2>
                
                <div class="row">
                    <% camp.image.forEach(function(img, i) { %>
                        <div class="col-6 col-sm-4 col-md-3 mb-3">
                            <img 
                                src="<%= img.thumbnail %>" 
                                class="img-thumbnail img-fluid mb-2" 
                                alt="Image to delete: <%= img.filename %>"
                            >
                            <div class="form-check">
                                <input 
                                    class="form-check-input" 
                                    type="checkbox" 
                                    id="img-<%=i%>" 
                                    name="deleteImg[]" 
                                    value="<%= img.filename %>"
                                >
                                <label class="form-check-label" for="img-<%=i%>">
                                    Delete
                                </label>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
            
            <div class="d-grid">
                <button class="btn btn-success btn-lg my-3">Update Photos</button>
            </div>
            
        </form>
    </div>
</div>